<aura:component controller="Mycontroller" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction,lightning:actionOverride"
                access="global">
    
  
     <aura:handler name="init" value="this" action="{!c.doInit}"/>
     <aura:attribute name="oppdata" type="String" default="Test"/>
    <aura:attribute name="ContactId" type="String" />
    <aura:attribute name="consumerID" type="String" />
    <aura:attribute name="Recruitmentprgrm" type="String" />
    
    <aura:attribute name="test" type="String" />
   
    
    <!--  <aura:handler event="force:refreshView" action="{!c.isRefreshed}" /> -->
    <aura:attribute name="StageName" type="String" />
    <aura:attribute name="isAddProduct" type="Boolean" default="false"/>
    <aura:attribute name="buttonVariant" type="String" default="neutral" />
    <article class="slds-card">
        <br/><br/>
        <div class="slds-p-bottom_large slds-p-left_large" >
            
            
            
            <lightning:recordEditForm aura:id="editForm" objectApiName="Recruitment_Assessment_Note__c" onsuccess="{!c.handleSuccess}">
                                      
                <lightning:messages />
                
        <aura:iteration items="{!v.ContactId}" var="item">
             
                
          <h3 class="slds-section-title--divider">Recruitment Details</h3>                       
                <div class="slds-grid slds-gutters">
                    
                    <div class="slds-col">
                        <div class="slds-size_3-of-1">
                            <div class="slds-m-left_xx-large">
                                <lightning:inputField fieldName="Recruitment_Program__c" styleClass="requiredInput"  value="{!item.Recruitment_Program__c}"  style="width: 350px !important;"/>
                                <lightning:inputField fieldName="Recruitment_Type__c" styleClass="requiredInput"    value="{!item.Recruitment_Type__c}" style="width: 350px !important;"/>
                                
                            </div> 
                        </div>
                    </div>
                    <div class="slds-col">
                        <div class="slds-size_3-of-1">
                            <div class="slds-m-left_xx-large">
                                <lightning:inputField fieldName="Recruiter_Assigned_Date__c" styleClass="requiredInput"  value="{!item.Recruiter_Assigned_Date__c}" style="width: 350px !important;"/> 
                           <lightning:inputField fieldName="Recruiter__c" styleClass="requiredInput" value="{!item.Recruiter__c}"  style="width: 350px !important;"/> 

                            </div>
                        </div>
                    </div>  
                </div>
                
                <h3 class="slds-section-title--divider">Information</h3>                       
                <div class="slds-grid slds-gutters">
                    
                    <div class="slds-col">
                        <div class="slds-size_3-of-1">
                            <div class="slds-m-left_xx-large">
                                
                              
                                <lightning:inputField fieldName="Name"  label="Participation Assessment Form Name" required="true" style="width: 350px !important;"/>
                                 <aura:if isTrue="{!item.LastName!=null}">
                               <lightning:inputField fieldName="Provider__c" label="Provider" value="{!item.Id}"  style="width: 350px !important;">
                                </lightning:inputField>
                                     <aura:set attribute="else">
                                 <lightning:inputField fieldName="Provider__c" label="Provider"   style="width: 350px !important;">
                                </lightning:inputField>
                                  </aura:set>
                                </aura:if>
                                <aura:if isTrue="{!item.LastName!=null}">
                               <lightning:inputField fieldName="Consumer__c" label="Consumer"  style="width: 350px !important;">
                                </lightning:inputField>
                                 <aura:set attribute="else">
                                 <lightning:inputField fieldName="Consumer__c" label="Consumer" value="{!item.Id}" style="width: 350px !important;">
                                </lightning:inputField>
                                  </aura:set>
                                  </aura:if> 
                               
                                <lightning:inputField fieldName="PAF_Contact_Type__c" label="Contact Type"   style="width: 350px !important;">
                                </lightning:inputField>
                                <lightning:inputField fieldName="PAF_Notes__c" label="Notes" style="width: 350px !important;">
                                </lightning:inputField>
                                <lightning:inputField fieldName="PAF_Quotes__c" label="Quotes"   style="width: 350px !important;">
                                </lightning:inputField>
                                   
                            </div>                          
                        </div>
                    </div>
                    <div class="slds-col">
                        <div class="slds-size_3-of-1">
                            <div class="slds-m-left_xx-large">
                                <lightning:inputField fieldName="PAF_Recruitment_Assessment__c" label="Recruitment Assessment"  style="width: 350px !important;">
                                </lightning:inputField>
                                <lightning:inputField fieldName="PAF_How_did_you_find_this_provider__c" label="How did you find this provider?" style="width: 350px !important;"/> 
                                
                                <lightning:inputField fieldName="PAF_Follow_Up_When_Where_How__c" label="Follow Up (When? Where? How?)" style="width: 350px !important;"/>
                                
                            </div>
                        </div>  
                    </div>
                </div>
                
 </aura:iteration>               
                
                <h3 class="slds-section-title--divider">Actual Visit Address Information</h3> 
                <div class="slds-grid slds-gutters">
                    <div class="slds-col">
                        <div class="slds-size_3-of-1">
                            <div class="slds-m-left_xx-large">
                                <lightning:inputField  fieldName="Override_Address__c" label="Override Address?" style="width: 350px !important;" />
                                <lightning:inputField  fieldName="PAF_Address__c" label="Address" style="width: 350px !important;" />
                                <lightning:inputField  fieldName="Apt_Suite_Unit__c" label="Apt/Suite/Unit" style="width: 350px !important;" />
                                <lightning:inputField  fieldName="PAF_City__c" label="City" style="width: 350px !important;" />
                                <lightning:inputField  fieldName="PAF_State__c" label="State" style="width: 350px !important;" />
                                <lightning:inputField  fieldName="PAF_Zip__c" label="Zip" style="width: 350px !important;" />
                            </div>
                        </div>
                    </div>
                    
                    
                    <div class="slds-col">
                        <div class="slds-size_3-of-1">
                           
                                <div class="slds-m-left_xx-large">
                                    <lightning:inputField  fieldName="EdFund_Facility__c" label="EdFund Facility" style="width: 350px !important;" class=""/>
                                    <lightning:inputField  fieldName="EdFund_Vendor__c" label="EdFund Vendor" style="width: 350px !important;" class=""/>
                                </div>
                                
                           
                        </div>
                    </div>
                </div>
                
           <h3 class="slds-section-title--divider">Assessment Information</h3> 
                <div class="slds-grid slds-gutters">
                    <div class="slds-col">
                        <div class="slds-size_3-of-1">
                            <div class="slds-m-left_xx-large">
                                <lightning:inputField  fieldName="PAF_Assessment_Health_Plan__c" label="Assessment Health Plan"  style="width: 350px !important;" />
                                <lightning:inputField  fieldName="Assessment_Note__c" label="Assessment Note" style="width: 350px !important;" />
                                <lightning:inputField  fieldName="PAF_IHSS_Pay_Stub_ID__c" label="IHSS Pay Stub ID" style="width: 350px !important;" />
                            </div>
                        </div>
                    </div>
                    
                    
                    <div class="slds-col">
                        <div class="slds-size_3-of-1">
                            
                                <div class="slds-m-left_xx-large">
                                    <lightning:inputField  fieldName="PAF_Appointment_Date_Time__c" label="Appointment Date &amp; Time"  style="width: 350px !important;"/>
                                    <lightning:inputField  fieldName="PAF_Appointment_Language__c" label="Appointment Language" style="width: 350px !important;" />
                                <lightning:inputField  fieldName="PAF_Appointment_Duration_Estimated__c" label="Appointment Duration (Estimated)" style="width: 350px !important;"/>

                                </div>
                                
                          
                        </div>
                    </div>
                </div>       
                
                
                
                <div class="slds-m-top_medium slds-text-align_center">
                    <Center>
                        <lightning:button variant="brand" name="Save" label="Save" type="submit"/>
                        <lightning:button variant="neutral" type="cancel" name="cancel" label="Cancel" onclick="{!c.onCancel}"/>
                        
                    </Center>
                </div>
                 <lightning:navigation aura:id="navService"/>
            </lightning:recordEditForm>  
           
       
        </div>
    </article>
</aura:component>